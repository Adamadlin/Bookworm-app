<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/textMyListTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textMyListAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/textMyListTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"/>

        <DatePicker
            android:id="@+id/datePickerReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            app:layout_constraintTop_toBottomOf="@id/textMyListAuthor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:theme="@style/DatePickerTheme"
            android:background="@color/white"
            />
        <Button
            android:id="@+id/buttonSetReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_up_a_reminder"
            app:layout_constraintTop_toBottomOf="@id/datePickerReturn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonReturnBook"
            android:layout_marginTop="10dp"
            android:backgroundTint="#18a86f"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonReturnBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/return_book"
            app:layout_constraintTop_toBottomOf="@id/buttonSetReminder"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#18a86f"
            android:textColor="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--
    item_book_my_list.xml:
    One RecyclerView row for user's saved list.
    Shows title/author + DatePicker for return date + reminder button.
    -->
</androidx.cardview.widget.CardView>
